@model EADProject.Models.User
@section signup 
{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
}
       @Scripts.Render("~/bundles/jquery")
     <script>

         $(document).ready(function () {
             $('#b1').click(function () {

                 var userName = $('#n').val();
                 $('#result').text(userName);
                 $.getJSON("/Home/CheckUserName?UserName=" + userName, function (data) {

                     if (data == true)
                     {

                         $('#result').text("UserName is not available");

                     }
                     else
                     {

                         $('#result').text("UserName is available");
                     }
                 });

             });

         });
    </script>        
        <section id="content">
			<div class="main">
				<div class="indent-left">
					<div class="wrapper">          
        
        
          <article class="col-1">
							<h3>Sign Up</h3>
                                
                      	
									
                    @using(Html.BeginForm("signup", "Home", FormMethod.Post))
                    {		
                           @Html.AntiForgeryToken()
                         @Html.ValidationSummary(true)

                        <fieldset>
									 <label>
                                       @Html.LabelFor(m => m.UserName)
                                    </label>
                                      <input type="text" name="username" id="n" />
                                    <input type="button" id="b1" value="Check" />
                                     <div id="result"></div>
                                    @Html.ValidationMessageFor(m=> m.UserName)
									<label>
                                        @Html.LabelFor(m => m.Email)
									  
                                    </label>
                                    <label>
                                        @Html.TextBoxFor(m => m.Email)
                                          @Html.ValidationMessageFor(m => m.Email)
                                        <br />
									  
                                    </label>
									<label>
									 @Html.LabelFor(m => m.Password)
									</label>
									  @Html.TextBoxFor(m => m.Password)
                                      @Html.ValidationMessageFor(m => m.Password)
                                    <br />
									<label>    
                                    </label>
									<div class="buttons-wrapper">
										
									<input type="submit" class="button" value ="Sign Up" />
									</div>

                                    
				</fieldset>
                    }
                    


						</article>
        
                 
                  
                        </div>
				</div>
			</div>
		</section>		
		<script type="text/javascript"> Cufon.now(); </script>